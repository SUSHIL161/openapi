 <plugin>
                             <groupId>org.openapitools</groupId>
                             <artifactId>openapi-generator-maven-plugin</artifactId>
                             <version>6.4.0</version>
                             <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>
                                ${project.basedir}/../openapi/target/classes/openapi.yaml
                            </inputSpec>
                            <generatorName>java</generatorName>
                            <library>rest-assured</library>
                            <output>${project.build.directory}/generated-sources</output>
                            <apiPackage>${project.groupId}.sdk.api</apiPackage>
                            <modelPackage>${project.groupId}.sdk.models</modelPackage>
                            <invokerPackage>${project.groupId}.sdk</invokerPackage>
                            <generateApiTests>false</generateApiTests>
                            <generateModelTests>false</generateModelTests>
                            <!-- pass any necessary config options -->
                            <configOptions>
                                <dateLibrary>java8-localdatetime</dateLibrary>
                                <generatorLanguage>java</generatorLanguage>
                                <generatorType>CLIENT</generatorType>
                                <generatorDefaulTemplatingEngine></generatorDefaulTemplatingEngine>
                                <helpTxt></helpTxt>
                                <isRemoveEnumValuePrefix>false</isRemoveEnumValuePrefix>
                                <isRemoveOperationIdPrefix>false</isRemoveOperationIdPrefix>
                            </configOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
